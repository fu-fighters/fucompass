<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.github.organizations.fufighters"
          android:versionCode="6"
          android:versionName="1.3">
    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="14"/>
    <supports-screens android:normalScreens="true" android:resizeable="true" android:largeScreens="true"
                      android:anyDensity="true" android:smallScreens="true"
                      android:xlargeScreens="false"></supports-screens>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application android:allowClearUserData="true" android:label="@string/app_name"
                 android:icon="@drawable/icon">
        <activity android:name="org.github.fufighters.CompassActivity"
                  android:screenOrientation="portrait"
                  android:theme="@style/compassTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.LAUNCHER"></category>
            </intent-filter>
        </activity>
        <activity android:name="org.github.fufighters.HelpActivity" android:theme="@style/compassTheme"
                  android:label="Help"
                  android:screenOrientation="portrait"></activity>
    </application>
</manifest>
